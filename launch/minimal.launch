<launch>
    <!-- Start ROS communication between the robot's computer and Linorobot base -->
    <node pkg="rosserial_python" name="rosserial_lino" type="serial_node.py" output="screen">
        <param name="port" value="/dev/robot_base" />
        <param name="baud" value="57600" />
    </node>

    <!-- IMU Relay and Filter -->
    <include file="$(find turtlebot_6wd)/launch/imu.launch" />
    
    <!-- Publish Linorobot odometry -->
    <node pkg="turtlebot_6wd" name="base_controller_node" type="base_node" output="screen" />

    <!-- Publish static transform from base_footprint to base_link -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_footprint_to_base_link" args="0 0 0.075 0 0 0  /base_footprint /base_link"/>
    
    <!-- Run Linorobot compatible laser drivers -->
    <include file="$(find turtlebot_6wd)/launch/laser.launch" />
    
<!--
    <include file="$(find turtlebot_6wd)/launch/rf2o_laser_odometry.launch" />
-->
</launch>
